code-background-color = #fafafa
code-font-color = #000000
code-border-color = #eaeefb
table-border-color = #dfe2e5

.theme-default-content{
  > h3{
    margin: 55px 0 20px !important;
    padding: 0 !important;
  }
  table{
    display: table;
    width: 100%;
    tr{
      border-bottom: 1px solid table-border-color;
      border-top: none;
      &:nth-child(2n){
        background: transparent;
      }
    }
    th,td{
      border: none;
      text-align: left;
      padding: 15px;
    }
  }
}

.content{
  > .title{
    margin-bottom: 50px;
    h1{
      margin: 0;
      font-size: 28px;
    }
  }
}

.demo{
  margin-top: 54px;
  .title{
    h2{
      font-size: 22px;
      border: none;
    }
  }
}

.demo-block{
  border: 1px solid code-border-color;
  border-radius: 3px;
  transition: .2s;
  &:hover{
    box-shadow: 0 0 8px 0 rgba(232, 237, 250, .6), 0 2px 4px 0 rgba(232, 237, 250, .5);
  }
  .source{
    padding: 24px
  }
  .demo-block-control{
    padding: 10px 20px;
    cursor: pointer;
    font-size: 14px;
    text-align: center;
  }
}

.code-content{
  background-color: code-background-color;
  border-top: 1px solid code-border-color;
  overflow: hidden;
  height: 0;
  transition: height .2s;
  pre{
    background: code-background-color;
    margin: 0;
    padding: 0;
    code{
      color: code-font-color;
      padding: 18px 24px;
      font-size: 12px;
      line-height: 1.8;
    }
  }
}
